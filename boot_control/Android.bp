cc_defaults {
	name: "bootctrl.defaults",

	cflags: [
		"-Wno-unused-parameter",
	],
	include_dirs: [
		"system/core/mkbootimg",
		"bootable/recovery",
	],
	header_libs: [
		"libhardware_headers",
		"libcutils_headers",
		"libbase_headers",
	],
	shared_libs: [
		"liblog",
		"libbase",
		"libhardware",
		"libcutils",
		"libhidlbase",
		"android.hardware.boot@1.0",
	],

	static_libs: [
		"libfstab",
	],
}

cc_library_shared {
	name: "bootctrl.exynos9610",
	defaults: ["bootctrl.defaults"],

	vendor: true,
	recovery_available: true,
	relative_install_path: "hw",
	srcs: [
		"boot_control.cpp"
	],
}

